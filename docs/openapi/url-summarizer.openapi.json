{
    "openapi": "3.0.0",
    "info": {
      "title": "URL Summarizer API",
      "version": "1.0.0",
      "description": "Summarize the main content of a web page given its URL."
    },
    "paths": {
      "/ai-agent/v1/url/summarize": {
        "post": {
          "summary": "Summarize URL Content",
          "operationId": "summarizeUrl",
          "requestBody": {
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UrlSummarizeRequest"
                },
                "examples": {
                  "shortExample": {
                    "summary": "Short summary",
                    "value": {
                      "url": "https://example.com/article-about-fastapi",
                      "style": "short"
                    }
                  },
                  "detailedExample": {
                    "summary": "Detailed summary",
                    "value": {
                      "url": "https://example.com/long-technical-blog-post",
                      "style": "detailed"
                    }
                  }
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Successful URL summarization",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/UrlSummarizeResponse"
                  },
                  "examples": {
                    "success": {
                      "summary": "Example response",
                      "value": {
                        "summary": "This article explains how FastAPI enables building high-performance APIs in Python using type hints and async features.",
                        "key_points": [
                          "FastAPI is built on Starlette and Pydantic.",
                          "It leverages Python type hints for validation and docs.",
                          "It provides automatic interactive API documentation."
                        ]
                      }
                    }
                  }
                }
              }
            },
            "400": {
              "description": "Bad Request (invalid URL or not enough readable text)",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                  },
                  "examples": {
                    "notEnoughText": {
                      "summary": "Page has no content",
                      "value": {
                        "detail": "The page does not contain enough readable text to summarize."
                      }
                    }
                  }
                }
              }
            },
            "502": {
              "description": "Failed to fetch URL (network / upstream error)",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                  },
                  "examples": {
                    "fetchError": {
                      "summary": "Cannot reach URL",
                      "value": {
                        "detail": "Failed to fetch URL: ..."
                      }
                    }
                  }
                }
              }
            },
            "500": {
              "description": "Server or LLM error during summarization",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/ErrorResponse"
                  },
                  "examples": {
                    "llmError": {
                      "summary": "Ollama/model error",
                      "value": {
                        "detail": "URL summarization failed: ..."
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "UrlSummarizeRequest": {
          "type": "object",
          "properties": {
            "url": {
              "type": "string",
              "format": "uri"
            },
            "style": {
              "type": "string",
              "enum": ["short", "detailed"],
              "default": "short"
            }
          },
          "required": ["url"]
        },
        "UrlSummarizeResponse": {
          "type": "object",
          "properties": {
            "summary": {
              "type": "string"
            },
            "key_points": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "required": ["summary"]
        },
        "ErrorResponse": {
          "type": "object",
          "properties": {
            "detail": {
              "type": "string"
            }
          },
          "required": ["detail"]
        }
      }
    }
  }
  